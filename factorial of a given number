#include <stdio.h>
#include <conio.h>

int main() 
{
    int n,fact = 1 , m, rem, digits = 0;

    printf("Enter a number: ");
    scanf("%d", &n);
    m = n;
    while(n != 0)
    {
        fact = fact * n;
        n--;
    }
    printf("The factorial of %d is : %d", m , fact);
    return 0;
    getch();
}
